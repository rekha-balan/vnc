<Grid x:Class="VNC_AddLogging.User_Interface.User_Controls_WPF.wucLoggingControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VNC_AddLogging.User_Interface.User_Controls_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0">Hello</Label>
        <Button Grid.Row="1" Click="Button_Click">Hello</Button>

        <Button Grid.Row="2" x:Name="btnAddLoggingToClass" Click="btnAddLoggingToClass_Click">Add Logging to Class</Button>
        <Button Grid.Row="3" x:Name="btnAddLoggingToModule" Click="btnAddLoggingToModule_Click">Add Logging to Module</Button>
        <Button Grid.Row="4" x:Name="btnAddLoggingToMethod" Click="btnAddLoggingToMethod_Click">Add Logging to Method</Button>
        
        <ListBox x:Name="lbDebugWindow" Grid.Row="5" />
    </Grid>
</Grid>
