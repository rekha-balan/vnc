                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Content="Server:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" Grid.Row="0" 
                             HorizontalAlignment="Left" Margin="3" 
                             Name="netNameTextBox" 
                             Text="{Binding Path=NetName, Mode=TwoWay, ValidatesOnExceptions=true, NotifyOnValidationError=true}" 
                             VerticalAlignment="Center" />
                </Grid>

                <Grid DataContext="{StaticResource serversInstancesViewSource}" Name="grid2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Content="Instance:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" Grid.Row="0" 
                             HorizontalAlignment="Left" Margin="3"
                             Name="name_InstanceTextBox" 
                             Text="{Binding Path=Name_Instance, Mode=TwoWay, ValidatesOnExceptions=true, NotifyOnValidationError=true}" 
                             VerticalAlignment="Center" />
                </Grid>

                <Grid DataContext="{StaticResource serversInstancesDatabasesViewSource}" Name="grid3" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Content="Database:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" Grid.Row="0" 
                             HorizontalAlignment="Left" Margin="3" 
                             Name="name_DatabaseTextBox" 
                             Text="{Binding Path=Name_Database, Mode=TwoWay, ValidatesOnExceptions=true, NotifyOnValidationError=true}" 
                             VerticalAlignment="Center" />
                </Grid>
            </StackPanel>
            
        </DockPanel>

