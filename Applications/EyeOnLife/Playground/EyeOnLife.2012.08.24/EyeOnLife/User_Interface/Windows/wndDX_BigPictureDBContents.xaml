                                                        <dxg:TemplatesContainer />
                                                    </dxg:BandedViewBehavior.TemplatesContainer>
                                                                                             
                                                </dxg:BandedViewBehavior>
                                            </i:Interaction.Behaviors>
                                        </dxg:TableView>
                                    </dxg:GridControl.View>
                                </dxg:GridControl>

                            </lc:LayoutGroup>

                            <lc:LayoutGroup Header="Instances" Name="layoutGroupInstances"
                                VerticalAlignment="Top"
                                MaxHeight="450" 
                                View="Group" 
                                Orientation="Vertical" 
                                IsCollapsible="True"
                                IsCollapsed="False"  >
                    
                                <dxg:GridControl Name="fK_Instances_ServersGridControl"
                                    ItemsSource="{Binding Source={StaticResource serversInstancesViewSource}}" 
                                    DesignTimeDataObjectType="{Binding Path=Instances, Source={StaticResource applicationDataSet}}"
                                    DefaultSorting="Name_Instance" >
                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn FieldName="ID" Name="gridColumn_ID2" Fixed="Left" Visible="False" />
