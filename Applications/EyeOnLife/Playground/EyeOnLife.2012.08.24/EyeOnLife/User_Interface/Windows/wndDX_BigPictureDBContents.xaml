                            <lc:LayoutGroup Header="Tables" Name="layoutGroupTables" 
                                MaxHeight="800"
                                VerticalAlignment="Top"                                            
                                View="Group" 
                                Orientation="Vertical" 
                                IsCollapsible="True"
                                IsCollapsed="True" >
                    
                                <dxg:GridControl Name="fK_DBTables_DatabasesGridControl"
                                    ItemsSource="{Binding Source={StaticResource serversInstancesDatabasesDBTablesViewSource}}" 
                                    DesignTimeDataObjectType="{Binding Path=DBTables, Source={StaticResource applicationDataSet}}"                                     
                                    DefaultSorting="Name_Table" >
