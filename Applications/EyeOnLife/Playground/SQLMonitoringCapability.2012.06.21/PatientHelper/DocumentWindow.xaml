<Window x:Class="IdentityMine.Avalon.Controls.DocumentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Document Window" Loaded="WindowLoaded"
    >
<Window.Resources>
  
  <Style x:Key="LooklessButton" TargetType="{x:Type Button}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Grid  Background="transparent">
            <ContentPresenter VerticalAlignment="{TemplateBinding Property=VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding Property=HorizontalContentAlignment}" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  
  
  
</Window.Resources>

	<FlowDocumentReader  Margin="0" Background="white" x:Name="JournalDocumentReader" MinZoom="80" MaxZoom="200" ZoomIncrement="20"  Padding="0,0,0,0" >
		
        
</FlowDocumentReader>

	
	
</Window>
