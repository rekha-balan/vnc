    <Style x:Key="SmallMasterListItem" TargetType="{x:Type ListBoxItem}">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template" Value="{DynamicResource smallServerDetailsTemplate}" />
        <Setter Property="Padding" Value="0,0,0,0" />
        <Style.Triggers>
            <Trigger Property="Selector.IsSelected" Value="True">
                <Setter Property="Template" 
                        Value="{DynamicResource smallServerDetailsTemplateSelected}" />
            </Trigger>
        </Style.Triggers>
    </Style>

