<Window x:Class="SQLInformation.User_Interface.Windows.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DebugWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="156*" />            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="121*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
            <ListView Name="lvOutput"
                HorizontalAlignment="Left" Height="100" Width="464">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBox x:Name="tbOutput"
                Grid.Column="1" 
                HorizontalAlignment="Left" Height="187" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" Width="464"/>
        </StackPanel>
    </Grid>
</Window>
