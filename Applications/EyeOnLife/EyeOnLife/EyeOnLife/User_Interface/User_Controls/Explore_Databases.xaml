<uiuc:wucDX_Base
    x:Class="EyeOnLife.User_Interface.User_Controls.Explore_Databases"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework" 
    mc:Ignorable="d"
    
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"     
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"  
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"     
    
    xmlns:local="clr-namespace:EyeOnLife.User_Interface" 
    xmlns:localData="clr-namespace:SQLInformation.Data;assembly=SQLInformation"
    xmlns:ui="clr-namespace:EyeOnLife.User_Interface" 
    xmlns:uiuc="clr-namespace:EyeOnLife.User_Interface.User_Controls"
    xmlns:uiw="clr-namespace:EyeOnLife.User_Interface.Windows"
    
    Title="Instance-Database Explorer" FontSize="16"
    d:DesignWidth="800" d:DesignHeight="500"    
    Loaded="OnLoaded" SizeChanged="OnSizeChanged" >

    <uiuc:wucDX_Base.Resources>
        <localData:ApplicationDataSet x:Key="applicationDataSet" />
        
        <CollectionViewSource x:Key="adDomains" />
        <CollectionViewSource x:Key="environments" Source="{Binding Path=LKUP_Environments, Source={StaticResource applicationDataSet}}" />
        <CollectionViewSource x:Key="securityZones" />
                        
        <Style x:Key="BoldFontLabelStyle" TargetType="dxlc:LayoutItemLabel">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

    </uiuc:wucDX_Base.Resources>

    <dxlc:LayoutControl Name="lc_Root" 
                      Orientation="Vertical"
                      Background="Transparent" >    
        
        <dxlc:LayoutControl.AvailableItems>
            
            <!-- Add things that are optionally displayable-->

        </dxlc:LayoutControl.AvailableItems>

        <dxlc:LayoutGroup Name="lg_Header"
                        VerticalAlignment="Top">

            <!--<dxlc:LayoutGroup 
                HorizontalAlignment="Left"
                    Orientation="Vertical" 
                    ItemSpace="2">

                <RadioButton Content="Start with Servers" Name="startWithServers"
                                 IsChecked="True" 
                                 Checked="StartWith" 
                                 FontSize="10" />

                <RadioButton Content="Start with Instances" Name="startWithInstances" 
                                 IsChecked="False"                                  
                                 Checked="StartWith" 
                                 FontSize="10" />

            </dxlc:LayoutGroup>-->
            
            <dxlc:LayoutGroup 
                Orientation="Horizontal" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemSpace="30">

                <dxlc:LayoutItem Label="Server:" Visibility="Visible">
                    <TextBlock Text="{Binding Path=NetName}" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Visibility="Visible">
                    <TextBlock Text="{Binding Path=ADDomain}" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Visibility="Visible">
                    <TextBlock Text="{Binding Path=Environment}" />
                </dxlc:LayoutItem>
                               
                <dxlc:LayoutItem Label="Database:"
                                 DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_Databases}" >
                    <TextBlock Text="{Binding Path=Name_Database}" />
                </dxlc:LayoutItem>
                
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup 
                HorizontalAlignment="Right"
                Orientation="Vertical" 
                ItemSpace="2">

                <RadioButton Content="Show as Tabs" Name="checkShowAsTabs"
                                IsChecked="True" 
                                Checked="ShowAs_Checked" 
                                FontSize="10" />
                <RadioButton Content="Show as Group Boxes" Name="checkShowAsGroupBoxes" 
                                Checked="ShowAs_Checked" 
                                FontSize="10" />

            </dxlc:LayoutGroup>

        </dxlc:LayoutGroup>
        
        <dxlc:LayoutGroup Name="lg_Body" >

            <dxdo:DockLayoutManager Name="lg_Body_dlm" 
                                    dx:StyleManager.ApplyApplicationTheme="True" 
                                    FontSize="12" >
                
                <dxdo:LayoutGroup >

                    <dxdo:LayoutPanel Style="{StaticResource FixedLayoutPanel}"  Name="lg_Body_dlm_layoutGroup"
                                      FontSize="12">

                        <dxlc:LayoutControl 
                            Orientation="Vertical" 
                            StretchContentVertically="True" 
                            Background="Transparent">

                            <dxlc:LayoutGroup Name="groupContainer"       
                                    Orientation="Vertical" 
                                    View="Tabs">

                                <dxlc:LayoutGroup.GroupBoxStyle>
                                    <Style TargetType="dxlc:GroupBox">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="TitleVisibility" Value="Collapsed" />
                                    </Style>
                                </dxlc:LayoutGroup.GroupBoxStyle>

                                <dxlc:LayoutGroup Header="Databases" Name="lg_Databases"                                 
                                    View="Group"
                                    Orientation="Vertical"
                                    IsCollapsible="True"
                                    IsCollapsed="False" >

                                    <ContentControl Name="cc_DisplayOptions3"
                                        Template="{StaticResource DisplayOptionsControls_Database}" 
                                        VerticalAlignment="Top" />

                                    <dxlc:LayoutControl Name="lc_DatabasesGrid" Style="{StaticResource LayoutControlStyle_Grid}"
                                                        VerticalAlignment="Top" >

                                        <dxg:GridControl Name="gc_Databases"
                                            Height="350" 
                                            Style="{StaticResource GridControlStyle}"                                                          

                                            DefaultSorting="Name_Database"
                                            CustomColumnDisplayText="OnCustomColumnDisplayText"
                                            CustomUnboundColumnData="CustomUnboundColumnData"                                                           
                                            Tag="Database" > <!--  Tag controls how OnCustomColumnDisplayText handles some columns. -->

                                            <dxg:GridControl.TotalSummary>
                                                <dxg:GridSummaryItem  SummaryType="Count" Alignment="Left"/>
                                            </dxg:GridControl.TotalSummary>

                                            <dxg:GridControl.Columns>
                                                <dxg:GridColumn FieldName="Name_Database" Name="gc_Name_Database" Style="{StaticResource Header_Name_Database}" Visible="True" Fixed="Left" />
                                                <dxg:GridColumn FieldName="ID" Name="gc_ID3" Visible="False" Style="{StaticResource Header_ID}" Fixed="Left" />

                                                <dxg:GridColumn FieldName="Name_Instance" Name="gc_Name_Instance3" Style="{StaticResource Header_Name_Instance}" Visible="True" Fixed="Left"  />
                                                <dxg:GridColumn FieldName="Instance_ID" Name="gc_Instance_ID" Style="{StaticResource Header_Instance_ID}" Visible="False" Fixed="Left" />

                                                <dxg:GridColumn FieldName="ADDomain" Name="gc_ADDomain" UnboundType="String" Style="{StaticResource Header_ADDomain}" Visible="False" />
                                                <dxg:GridColumn FieldName="Environment" Name="gc_Environment" UnboundType="String" Style="{StaticResource Header_Environment}" Visible="False" />
                                                <dxg:GridColumn FieldName="SecurityZone" Name="gc_SecurityZone" UnboundType="String" Style="{StaticResource Header_SecurityZone}" Visible="False" />

                                                <dxg:GridColumn FieldName="CreateDate" Name="gc_CreateDate" Style="{StaticResource Header_CreateDate}" 
                                                    EditSettings="{dxe:DateSettings DisplayFormat=G}"/>
                                                <dxg:GridColumn FieldName="DataBaseGuid" Name="gc_DatabaseGuid" Style="{StaticResource Header_DataBaseGuid}" Visible="False" />

                                                <dxg:GridColumn FieldName="DefaultFileGroup" Name="gc_DefaultFileGroup" Style="{StaticResource Header_DefaultFileGroup}" Visible="False" />
                                                <dxg:GridColumn FieldName="DataSpaceUsage" Name="gc_DataSpaceUsage" Style="{StaticResource Header_DataSpaceUsage}" Visible="False" />
                                                <dxg:GridColumn FieldName="IndexSpaceUsage" Name="gc_IndexSpaceUsage"  Style="{StaticResource Header_IndexSpaceUsage}" Visible="False"/>
                                                <dxg:GridColumn FieldName="Size" Name="gc_Size" Style="{StaticResource Header_Size}" Tag="MB" Visible="False" />
                                                <dxg:GridColumn FieldName="SpaceAvailable" Name="gc_SpaceAvailable" Style="{StaticResource Header_SpaceAvailable}" Visible="False" />

                                                <dxg:GridColumn FieldName="ID_DB" Name="gc_ID_DB" Style="{StaticResource Header_ID_DB}" Visible="False" />
                                                <dxg:GridColumn FieldName="Owner" Name="gc_Owner" Style="{StaticResource Header_Owner}" Visible="True" />

                                                <dxg:GridColumn FieldName="LastBackupDate" Name="gc_LastBackupDate" Style="{StaticResource Header_LastBackupDate}" 
                                                    EditSettings="{dxe:DateSettings DisplayFormat=G}" Visible="False"/>
                                                <dxg:GridColumn FieldName="LastDifferentialBackupDate" Name="gc_LastDifferentialBackupDate" Style="{StaticResource Header_LastDifferentialBackupDate}" 
                                                    EditSettings="{dxe:DateSettings DisplayFormat=G}" Visible="False"/>
                                                <dxg:GridColumn FieldName="LastLogBackupDate" Name="gc_LastLogBackupDate" Style="{StaticResource Header_LastLogBackupDate}" 
                                                    EditSettings="{dxe:DateSettings DisplayFormat=G}" Visible="False"/>
                                                <dxg:GridColumn FieldName="RecoveryModel" Name="gc_RecoveryModel" Style="{StaticResource Header_RecoveryModel}" Visible="False"/>

                                                <dxg:GridColumn FieldName="EP_Area" Name="gc_EP_Area" Visible="False"/>
                                                <dxg:GridColumn FieldName="EP_Team" Name="gc_EP_Team" Visible="False" />
                                                <dxg:GridColumn FieldName="EP_PrimaryDBContact" Name="gc_EP_PrimaryDBContact" Visible="False" />
                                                <dxg:GridColumn FieldName="EP_DBApprover" Name="gc_EP_DBApprover" Visible="False" />
                                                <dxg:GridColumn FieldName="EP_DRTier" Name="gc_EP_DRTier" Visible="False"/>

                                                <dxg:GridColumn FieldName="IsMonitored" Name="gc_IsMonitored3" Visible="True" Style="{StaticResource Header_IsMonitored}" />

                                                <dxg:GridColumn FieldName="ExpandDataFiles" Name="gc_ExpandDataFiles" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandFileGroups" Name="gc_ExpandFileGroups" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandLogFiles" Name="gc_ExpandLogFiles" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandRoles" Name="gc_ExpandRoles" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandStoredProcedures" Name="gc_ExpandStoredProcedures" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandTables" Name="gc_ExpandTables" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandTriggers" Name="gc_ExpandTriggers" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandUserDefinedFunctions" Name="gc_ExpandUserDefinedFunctions" Visible="False" />
                                                <dxg:GridColumn FieldName="ExpandUsers" Name="gc_ExpandUsers" Visible="False"/>
                                                <dxg:GridColumn FieldName="ExpandViews" Name="gc_ExpandViews" Visible="False" />

                                                <dxg:GridColumn FieldName="DefaultTableExpandMask" Name="gc_DefaultTableExpandMask" Visible="False" />
                                                <dxg:GridColumn FieldName="DefaultViewExpandMask" Name="gc_DefaultViewExpandMask" Visible="False" />

                                                <dxg:GridColumn FieldName="SnapShotDate" Name="gc_SnapShotDate3" Visible="False" 
                                                    Style="{StaticResource Header_SnapShotDate}"
                                                    EditSettings="{dxe:DateSettings DisplayFormat=G}"/>
                                                <dxg:GridColumn FieldName="SnapShotDuration" Name="gc_SnapShotDuration3" Visible="False"  Style="{StaticResource Header_SnapShotDuration}" />

                                                <dxg:GridColumn FieldName="SnapShotError" Name="gc_SnapShotError3" 
                                                Style="{StaticResource Header_SnapShotError}"                                                
                                                Visible="False"  />
                                            </dxg:GridControl.Columns>

                                            <dxg:GridControl.View> 
                                                <dxg:TableView Name="tableView"  
                                                              
                                                               FocusedRowChanged="tableView3_FocusedRowChanged"
                                                               Style="{StaticResource TableViewStyle}"/>
                                            </dxg:GridControl.View>
                                            
                                        </dxg:GridControl>

                                    </dxlc:LayoutControl>

                                    <dxlc:LayoutControl VerticalAlignment="Bottom" Name="lc_DatabaseDetail">
                                        <Border Style="{StaticResource DetailPaneBorderStyle}" >
                                            <dxlc:LayoutGroup 
                                            Orientation="Horizontal"
                                            DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_Databases}" >

                                                <dxlc:LayoutControl Orientation="Vertical">

                                                    <dxlc:LayoutItem Label="EP_Area: ">
                                                        <TextBlock Text="{Binding EP_Area}"  />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem Label="EP_Team: ">
                                                        <TextBlock Text="{Binding EP_Team}"  />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem Label="EP_PrimaryDBContact: ">
                                                        <TextBlock Text="{Binding EP_PrimaryDBContact}"  />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem Label="EP_DBApprover: ">
                                                        <TextBlock Text="{Binding EP_DBApprover}"  />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem Label="EP_DRTier: ">
                                                        <TextBlock Text="{Binding EP_DRTier}"  />
                                                    </dxlc:LayoutItem>

                                                </dxlc:LayoutControl>

                                            </dxlc:LayoutGroup>
                                        </Border>
                                    </dxlc:LayoutControl>

                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="Tables" Name="lg_Tables"                                          
                                    View="Group" 
                                    Orientation="Vertical" 
                                    IsCollapsible="True"
                                    IsCollapsed="True"
                                    DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_Databases}" >

                                    <ContentControl Name="cc_DisplayOptions4"
                                        Template="{StaticResource DisplayOptionsControls_Table}" 
                                                VerticalAlignment="Top" />

                                    <dxlc:LayoutControl Name="lc_TablesGrid" Style="{StaticResource LayoutControlStyle_Grid}"
                                                        VerticalAlignment="Top" >

                                        <dxg:GridControl Name="gc_Tables"
                                            Height="350"  
                                            Style="{StaticResource GridControlStyle}"                                                          
                                            ItemsSource="{Binding FK_DBTables_Databases}"
                                            DefaultSorting="Name_Table" 
                                            CustomColumnDisplayText="OnCustomColumnDisplayText" >

                                            <dxg:GridControl.TotalSummary>
                                                <dxg:GridSummaryItem  SummaryType="Count" Alignment="Left"/>
                                            </dxg:GridControl.TotalSummary>
                                            
                                            <dxg:GridControl.Columns>
                                                <dxg:GridColumn FieldName="ID" Name="gc_ID4" Visible="False" Fixed="Left" Style="{StaticResource Header_ID}" />
                                                <dxg:GridColumn FieldName="Database_ID" Name="gc_ID4a" Style="{StaticResource Header_Database_ID}" Visible="False" Fixed="Left" />
                                                <dxg:GridColumn FieldName="Name_Table" Name="gridColumn5t" Fixed="Left" Style="{StaticResource Header_Name_Table}" />

                                                <dxg:GridColumn FieldName="CreateDate" Name="gc_CreateDate4" Style="{StaticResource Header_CreateDate}" 
                                                            EditSettings="{dxe:DateSettings DisplayFormat=G}" />
                                                <dxg:GridColumn FieldName="DateLastModified" Name="gc_DateLastModified" Style="{StaticResource Header_DateLastModified}" 
                                                            EditSettings="{dxe:DateSettings DisplayFormat=G}"/>

                                                <dxg:GridColumn FieldName="HasIndex" Name="gc_HasIndex" Style="{StaticResource Header_HasIndex}" />
                                                <dxg:GridColumn FieldName="IsSystemObject" Name="gc_IsSystemObject" Style="{StaticResource Header_IsSystemObject}" />
                                                <dxg:GridColumn FieldName="Owner" Name="gc_Owner4" Style="{StaticResource Header_Owner}" />
                                                <dxg:GridColumn FieldName="Table_ID" Name="gc_Table_ID" Visible="False"/>

                                                <dxg:GridColumn FieldName="DataSpaceUsed" Name="gc_DataSpaceUsed" Style="{StaticResource Header_DataSpaceUsed}" />
                                                <dxg:GridColumn FieldName="RowCount" Name="gc_RowCount" Style="{StaticResource Header_RowCount}" />
                                                <dxg:GridColumn FieldName="FileGroup" Name="gc_FileGroup" Style="{StaticResource Header_FileGroup}" />

                                                <dxg:GridColumn FieldName="EP_Purpose" Name="gc_EP_Purpose" />
                                                
                                                <dxg:GridColumn FieldName="SnapShotDate" Name="gc_SnapShotDate4" Visible="False" 
                                                                Style="{StaticResource Header_SnapShotDate}"
                                                                EditSettings="{dxe:DateSettings DisplayFormat=G}"/>

                                                <dxg:GridColumn FieldName="SnapShotError" Name="gc_SnapShotError4" Visible="False"  
                                                                Style="{StaticResource Header_SnapShotError}" />
                                            </dxg:GridControl.Columns>
                                            
                                            <dxg:GridControl.View>
                                                <dxg:TableView Name="tableView4"                                                     
                                                               Style="{StaticResource TableViewStyle}" FocusedRowChanged="tableView4_FocusedRowChanged"/>
                                            </dxg:GridControl.View>
                                            
                                        </dxg:GridControl>

                                    </dxlc:LayoutControl>

                                    <dxlc:LayoutControl VerticalAlignment="Bottom" Name="lc_TableDetail">
                                        <Border Style="{StaticResource DetailPaneBorderStyle}" >
                                            <dxlc:LayoutGroup 
                                                Orientation="Horizontal"
                                                DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_Tables}">

                                                <dxlc:LayoutControl Orientation="Vertical">

                                                </dxlc:LayoutControl>

                                            </dxlc:LayoutGroup>
                                        </Border>
                                    </dxlc:LayoutControl>

                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="Views" Name="lg_Views"                                           
                                    View="Group" 
                                    Orientation="Vertical" 
                                    IsCollapsible="True"
                                    IsCollapsed="True"
                                    DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_Databases}" >
                                    
                                    <ContentControl Name="cc_DisplayOptions5"
                                        Template="{StaticResource DisplayOptionsControls}" 
                                                VerticalAlignment="Top" />

                                    <dxlc:LayoutControl Name="lc_ViewsGrid" 
                                                        Style="{StaticResource LayoutControlStyle_Grid}"
                                                        VerticalAlignment="Top" >

                                        <dxg:GridControl Name="gc_DBViews" 
                                            Height="350"   
                                            Style="{StaticResource GridControlStyle}"                                                          
                                            ItemsSource="{Binding FK_DBViews_Databases}"                         
                                            DefaultSorting="Name_View"
                                            CustomColumnDisplayText="OnCustomColumnDisplayText" >

                                            <dxg:GridControl.TotalSummary>
                                                <dxg:GridSummaryItem  SummaryType="Count" Alignment="Left"/>
                                            </dxg:GridControl.TotalSummary>
                                            
                                            <dxg:GridControl.Columns>
                                                <dxg:GridColumn FieldName="ID" Name="gc_ID5" Visible="False" Fixed="Left" />
                                                <dxg:GridColumn FieldName="Database_ID" Name="gc_ID5a" Visible="False" Fixed="Left" />
                                                <dxg:GridColumn FieldName="Name_View" Name="gridColumn10v" Fixed="Left" Style="{StaticResource Header_Name_View}" />

                                                <dxg:GridColumn FieldName="CreateDate" Name="gridColumn5v" Style="{StaticResource Header_CreateDate}" 
                                                            EditSettings="{dxe:DateSettings DisplayFormat=G}" />
                                                <dxg:GridColumn FieldName="DateLastModified" Name="gridColumn6v" Style="{StaticResource Header_DateLastModified}" 
                                                            EditSettings="{dxe:DateSettings DisplayFormat=G}" />
                                                
                                                <dxg:GridColumn FieldName="SnapShotDate" Name="gc_SnapShotDate5" Visible="False" 
                                                                Style="{StaticResource Header_SnapShotDate}"
                                                                EditSettings="{dxe:DateSettings DisplayFormat=G}"/>

                                                <dxg:GridColumn FieldName="SnapShotError" Name="gc_SnapShotError5" Visible="False"  
                                                                Style="{StaticResource Header_SnapShotError}" />
                                            </dxg:GridControl.Columns>
                                                
                                            <dxg:GridControl.View>
                                                <dxg:TableView Name="tableView5"                                                     
                                                               Style="{StaticResource TableViewStyle}"/>
                                            </dxg:GridControl.View>
                                        </dxg:GridControl>

                                    </dxlc:LayoutControl>

                                    <dxlc:LayoutControl VerticalAlignment="Bottom" Name="lc_ViewDetail">
                                        <Border Style="{StaticResource DetailPaneBorderStyle}" >
                                            <dxlc:LayoutGroup 
                                                Orientation="Horizontal"
                                                DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_DBViews}">

                                                <dxlc:LayoutControl Orientation="Vertical">

                                                </dxlc:LayoutControl>

                                            </dxlc:LayoutGroup>
                                        </Border>
                                    </dxlc:LayoutControl>

                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="StoredProcedures" Name="lg_StoredProcedures"                                           
                                    View="Group" 
                                    Orientation="Vertical" 
                                    IsCollapsible="True"
                                    IsCollapsed="True" 
                                    DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_Databases}" >

                                    <ContentControl Name="cc_DisplayOptions6" Template="{StaticResource DisplayOptionsControls}" 
                                                VerticalAlignment="Top" />

                                    <dxlc:LayoutControl Name="lc_StoredProceduresGrid" 
                                                        Style="{StaticResource LayoutControlStyle_Grid}"
                                                        VerticalAlignment="Top" >

                                       <dxg:GridControl Name="gc_StoredProcedures"
                                            Height="350" 
                                            Style="{StaticResource GridControlStyle}"                                                         
                                            ItemsSource="{Binding FK_DBStoredProcedures_Databases}"
                                            DefaultSorting="Name_StoredProcedure"
                                            CustomColumnDisplayText="OnCustomColumnDisplayText">

                                            <dxg:GridControl.TotalSummary>
                                                <dxg:GridSummaryItem  SummaryType="Count" Alignment="Left"/>
                                            </dxg:GridControl.TotalSummary>
                                           
                                            <dxg:GridControl.Columns>
                                                <dxg:GridColumn FieldName="ID" Name="gc_ID6" Visible="False" Fixed="Left" />
                                                <dxg:GridColumn FieldName="Database_ID" Name="gc_ID6a" Visible="False" Fixed="Left" />
                                                <dxg:GridColumn FieldName="Name_StoredProcedure" Name="gridColumn5s" Fixed="Left" Style="{StaticResource Header_Name_StoredProcedure}" />

                                                <dxg:GridColumn FieldName="CreateDate" Name="gridColumn12s" Style="{StaticResource Header_CreateDate}" 
                                                            EditSettings="{dxe:DateSettings DisplayFormat=G}" />
                                                <dxg:GridColumn FieldName="DateLastModified" Name="gridColumn13s" Style="{StaticResource Header_DateLastModified}" 
                                                            EditSettings="{dxe:DateSettings DisplayFormat=G}" />

                                                <dxg:GridColumn FieldName="Owner" Name="gridColumns7" Style="{StaticResource Header_Owner}"/>

                                                <dxg:GridColumn FieldName="SnapShotDate" Name="gc_SnapShotDate6" Visible="False" 
                                                                Style="{StaticResource Header_SnapShotDate}"
                                                                EditSettings="{dxe:DateSettings DisplayFormat=G}"/>

                                                <dxg:GridColumn FieldName="SnapShotError" Name="gc_SnapShotError6" Visible="False"  
                                                                Style="{StaticResource Header_SnapShotError}" />
                                            </dxg:GridControl.Columns>
                                           
                                           <dxg:GridControl.View>
                                                <dxg:TableView Name="tableView6"                                                     
                                                               Style="{StaticResource TableViewStyle}"/>
                                            </dxg:GridControl.View>
                                           
                                       </dxg:GridControl>

                                    </dxlc:LayoutControl>

                                    <dxlc:LayoutControl VerticalAlignment="Bottom" Name="lc_StoredProcedureDetail">
                                        <Border Style="{StaticResource DetailPaneBorderStyle}" >
                                            <dxlc:LayoutGroup 
                                                Orientation="Horizontal"
                                                DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_StoredProcedures}">

                                                <dxlc:LayoutControl Orientation="Vertical">


                                                </dxlc:LayoutControl>

                                            </dxlc:LayoutGroup>
                                        </Border>
                                    </dxlc:LayoutControl>

                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="DDLTriggers" Name="lg_DDLTriggers"                                           
                                    View="Group" 
                                    Orientation="Vertical" 
                                    IsCollapsible="True"
                                    IsCollapsed="True" 
                                    DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_Databases}" >

                                    <ContentControl Name="cc_DisplayOptions7" Template="{StaticResource DisplayOptionsControls}" 
                                                VerticalAlignment="Top" />

                                    <dxlc:LayoutControl Name="lc_DDLTriggersGrid" 
                                                        Style="{StaticResource LayoutControlStyle_Grid}"
                                                        VerticalAlignment="Top" >

                                        <dxg:GridControl Name="gc_DDLTriggers"
                                            Height="350"
                                            Style="{StaticResource GridControlStyle}"                                                          
                                            ItemsSource="{Binding FK_DBDdlTriggers_Databases}" 
                                            DefaultSorting="Name_Trigger"
                                            CustomColumnDisplayText="OnCustomColumnDisplayText" >

                                            <dxg:GridControl.TotalSummary>
                                                <dxg:GridSummaryItem  SummaryType="Count" Alignment="Left"/>
                                            </dxg:GridControl.TotalSummary>
                                            
                                            <dxg:GridControl.Columns>

                                                    <dxg:GridColumn FieldName="ID" Name="gc_ID7" Visible="False" Fixed="Left" />
                                                    <dxg:GridColumn FieldName="Database_ID" Name="gc_ID7a" Visible="False" Fixed="Left" />
                                                    <dxg:GridColumn FieldName="Name_Trigger" Name="gridColumn5tr" Fixed="Left" Style="{StaticResource Header_Name_Trigger}" />

                                                    <dxg:GridColumn FieldName="CreateDate" Name="gridColumn6tr" Style="{StaticResource Header_CreateDate}" 
                                                                EditSettings="{dxe:DateSettings DisplayFormat=G}" />
                                                    <dxg:GridColumn FieldName="DateLastModified" Name="gridColumn7tr" Style="{StaticResource Header_NetName}" 
                                                                EditSettings="{dxe:DateSettings DisplayFormat=G}" />

                                                    <dxg:GridColumn FieldName="SnapShotDate" Name="gc_SnapShotDate7" Visible="False"  
                                                                    Style="{StaticResource Header_SnapShotDate}"                                                                    
                                                                EditSettings="{dxe:DateSettings DisplayFormat=G}" />

                                                    <dxg:GridColumn FieldName="SnapShotError" Name="gc_SnapShotError7" Visible="False"  
                                                                    Style="{StaticResource Header_SnapShotError}" />
                                                </dxg:GridControl.Columns>
                                            
                                                <dxg:GridControl.View>
                                                <dxg:TableView Name="tableView7"                                                     
                                                               Style="{StaticResource TableViewStyle}"/>
                                            </dxg:GridControl.View>
                                            
                                            </dxg:GridControl>

                                    </dxlc:LayoutControl>

                                    <dxlc:LayoutControl VerticalAlignment="Bottom" Name="lc_DDLTriggerDetail">
                                        <Border Style="{StaticResource DetailPaneBorderStyle}" >
                                            <dxlc:LayoutGroup 
                                                Orientation="Horizontal"
                                                DataContext="{Binding Path=View.FocusedRowData.Row, ElementName=gc_DDLTriggers}">

                                                <dxlc:LayoutControl Orientation="Vertical">


                                                </dxlc:LayoutControl>

                                            </dxlc:LayoutGroup>
