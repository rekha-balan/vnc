                                Tag="JS_TargetServers"  />

                        <Button Content="LinkedServers" 
                                Style="{StaticResource AdminButtonLeft}" 
                                Tag="LinkedServers"  />

                        <Button Content="Logins" 
                                Style="{StaticResource AdminButtonLeft}" 
