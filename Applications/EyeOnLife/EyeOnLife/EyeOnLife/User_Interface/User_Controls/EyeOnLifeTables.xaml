                        <Button Content="ServerRoles" 
                                Style="{StaticResource AdminButtonLeft}" 
                                Tag="ServerRoles"  />

                        <!--<Button Content="LKUP Tables" 
                                Style="{StaticResource AdminButtonLeft}" 
                                Tag="wucDX_Admin_LKUPTables"  />-->

                        <!--<Button Content="Weekly Snapshot" Click="OnSnapShot_Weekly" />
