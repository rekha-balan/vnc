                        <Button Content="JS Alerts" 
                                Style="{StaticResource AdminButtonRight}" 
                                Tag="JS_Alerts"  />

                        <Button Content="JS Job Categories" 
                                Style="{StaticResource AdminButtonRight}" 
                                Tag="JS_JobCategories"  />

                        <Button Content="JS Jobs" 
