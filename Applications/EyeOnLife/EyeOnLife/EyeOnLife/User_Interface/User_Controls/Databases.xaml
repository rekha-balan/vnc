    xmlns:uiw="clr-namespace:EyeOnLife.User_Interface.Windows"

    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    
    d:DesignWidth="800" d:DesignHeight="600"
    Title="Databases" 
    Loaded="OnLoaded"  >
    
