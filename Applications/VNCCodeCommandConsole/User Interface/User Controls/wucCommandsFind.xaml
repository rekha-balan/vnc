<uiuc:wucDXBase
    x:Class="VNCCodeCommandConsole.User_Interface.User_Controls.wucCommandsFind"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework" 
    mc:Ignorable="d"
    
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"     
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"  
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"     
    
    xmlns:local="clr-namespace:VNCCodeCommandConsole"
    xmlns:localData="clr-namespace:VNCCodeCommandConsole.Data"
    xmlns:ui="clr-namespace:VNCCodeCommandConsole.User_Interface" 
    xmlns:uiuc="clr-namespace:VNCCodeCommandConsole.User_Interface.User_Controls"
    xmlns:uiw="clr-namespace:VNCCodeCommandConsole.User_Interface.Windows"
    
    xmlns:vxe="clr-namespace:VNC.Xaml.Enums;assembly=VNC.XamlHelper"
    xmlns:vcasn="clr-namespace:VNC.CodeAnalysis.SyntaxNode;assembly=VNC.CodeAnalysis"    

    d:DesignWidth="600" d:DesignHeight="600"
    d:DesignStyle="{StaticResource myDesignStyle}"
    Title="DXLayoutControl" 
    Loaded="OnLoaded"  >
    
    <!--<uiuc:wucDXBase.Resources>
        
        --><!--<localData:ApplicationDataSet x:Key="applicationDataSet"/>

        <CollectionViewSource x:Key="dataSource" 
                              Source="{Binding Path=ApplicationUsage, Source={StaticResource applicationDataSet}}" />--><!--

    </uiuc:wucDXBase.Resources>-->


    <dxlc:LayoutControl Orientation="Vertical">

        <dxlc:LayoutGroup Header="Find Patterns" 
            View="GroupBox"
            Orientation="Vertical">
            
            <dxlc:LayoutItem Label="Identifier" LabelPosition="Top">
                <!--<uiuc:wucFind_Picker x:Name="wucFind_Picker" 
                                             ControlChanged="wucFindPicker_ControlChanged" />-->
                <dxe:TextEdit x:Name="teIdentifier" >
                </dxe:TextEdit>
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button Content="InvocationExpression Walker" Click="btnInvocationWalker_Click"/>
            </dxlc:LayoutItem>

            <dxlc:LayoutGroup  Header="Manual Loop"
                               View="GroupBox"
                               IsCollapsible="True" IsCollapsed="True"
                               Orientation="Vertical">

                <dxe:CheckEdit x:Name="ceIncludeTrivia" Content="Include Trivia" IsChecked="True" VerticalAlignment="Top" />

                <dx:GroupFrame Header="SyntaxWalkerDepth" VerticalAlignment="Top">
                    <dxe:ComboBoxEdit Name="lbeSyntaxWalkerDepth" VerticalAlignment="Top"
                                     ItemsSource="{Binding Source={vxe:EnumBindingSource {x:Type vcasn:WalkerDepth}}}"                                                                     
                                     SelectedIndex="0"                                                         
                                     ShowBorder="False" Background="{x:Null}">
                    </dxe:ComboBoxEdit>
                    <!--<dxe:ListBoxEdit Name="lbeSyntaxWalkerDepth" 
                                                         ValueMember="Content" 
                                                         SelectedIndex="0"                                                         
                                                         ShowBorder="False" Background="{x:Null}">
                        <dxe:ListBoxEdit.StyleSettings>
                            <dxe:RadioListBoxEditStyleSettings />
                        </dxe:ListBoxEdit.StyleSettings>
                        <dxe:ListBoxEdit.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </dxe:ListBoxEdit.ItemsPanel>
                        <dxe:ListBoxEdit.Items>
                            <dxe:ListBoxEditItem Content="StructuredTrivia" />
                            <dxe:ListBoxEditItem Content="Node" />
                            <dxe:ListBoxEditItem Content="Token" />
                            <dxe:ListBoxEditItem Content="Trivia" />
                        </dxe:ListBoxEdit.Items>
                    </dxe:ListBoxEdit>-->
                </dx:GroupFrame>

                <dx:GroupFrame Header="Node Retrieval" VerticalAlignment="Top">
                    <dxe:ComboBoxEdit Name="lbeNodes" VerticalAlignment="Top"
                                     ItemsSource="{Binding Source={vxe:EnumBindingSource {x:Type vcasn:AdditionalNodes}}}"                                                                     
                                     SelectedIndex="0"                                                         
                                     ShowBorder="False" Background="{x:Null}">
                    </dxe:ComboBoxEdit>
                </dx:GroupFrame>

                <dxlc:LayoutItem>
                    <Button Content="InvocationExpression" Click="btnInvocation_Click"/>
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>

        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup Header="Find Common Things" 
        	    View="GroupBox" Orientation="Vertical">

            <dxlc:LayoutItem>
                <Button Content="Current.Application" 
                    Click="btnHttpContextWalker_Click" Tag="Application"/>
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button Content="Current.Session" 
                    Click="btnHttpContextWalker_Click" Tag="Session"/>
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button Content="Current.Cache" 
                    Click="btnHttpContextWalker_Click" Tag="Cache"/>
            </dxlc:LayoutItem>

        </dxlc:LayoutGroup>

        <dxe:CheckEdit x:Name="ceListImpactedFilesOnly" 
                       Content="List Impacted Files Only" 
                       IsChecked="False" VerticalAlignment="Top" />

    </dxlc:LayoutControl>
    
</uiuc:wucDXBase>
