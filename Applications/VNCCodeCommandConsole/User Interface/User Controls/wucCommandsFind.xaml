                </dxlc:LayoutGroup>

            </dxlc:LayoutGroup>

            <dxlc:LayoutItem>
                <Button Content="VariableDeclarator Walker" Click="btnVariableDeclaratorWalker_Click"/>
            </dxlc:LayoutItem>

        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup Header="Find StructureBlockSyntax" 
        	View="GroupBox" Orientation="Vertical"
            IsCollapsible="True" IsCollapsed="True"                          >

            <dxlc:LayoutGroup
            	Orientation="Horizontal">
                
                <dxlc:LayoutGroup
                	Orientation="Vertical">
                    <dxlc:LayoutItem>
                    	<dxe:CheckEdit x:Name="ceStructuresUseRegEx" Content="Use Regular Expressions"
                                       IsChecked="False"/>
                    </dxlc:LayoutItem>
                    
                    <dxlc:LayoutItem Label="Structures">
                    	<dxe:TextEdit x:Name="teStructureRegEx" Text=".*"
                                      IsEnabled="{cb:Binding ElementName=ceStructuresUseRegEx, Path=IsChecked, Mode=OneWay}"
                                      ToolTip="Supports Regular Expressions"/>
                    </dxlc:LayoutItem>
                    
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit x:Name="ceShowFields" 
                                   Content="ShowFields" 
                                   IsChecked="True"/>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutGroup
                    	Orientation="Vertical"
                        Visibility="{cb:Binding ElementName=ceShowFields, Path=IsChecked}" >
                        
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit x:Name="ceFieldsUseRegEx" Content="Use Regular Expressions"
                                       IsChecked="False"
                                           Checked="ceFieldsUseRegEx_Checked"
                                           EditValueChanged="ceFieldsUseRegEx_EditValueChanged"/>
                        </dxlc:LayoutItem>

                        <dxlc:LayoutItem Label="Fields" >
                            <dxe:TextEdit x:Name="teFieldsRegEx" Text=".*" 
                                    IsEnabled="{cb:Binding ElementName=ceFieldsUseRegEx, Path=IsChecked, Mode=OneWay}"
                                    ToolTip="Supports Regular Expressions"/>
                        </dxlc:LayoutItem>



                    </dxlc:LayoutGroup>

                </dxlc:LayoutGroup>

                <!--<dxlc:LayoutGroup
            	    Orientation="Vertical"
                    Visibility="{cb:Binding ElementName=ceAllTypes, Path=!IsChecked}">

