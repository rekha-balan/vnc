                    </dxe:ListBoxEdit>-->
                </dx:GroupFrame>

                <dx:GroupFrame Header="Node Retrieval" VerticalAlignment="Top">
                    <dxe:ComboBoxEdit Name="lbeNodes" VerticalAlignment="Top"
                                     ItemsSource="{Binding Source={vxe:EnumBindingSource {x:Type vcasn:AdditionalNodes}}}"                                                                     
                                     SelectedIndex="0"                                                         
                                     ShowBorder="False" Background="{x:Null}">
                    </dxe:ComboBoxEdit>
                </dx:GroupFrame>

                <dxlc:LayoutItem>
                    <Button Content="InvocationExpression" Click="btnInvocation_Click"/>
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>

        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup Header="Find HttpContext" 
        	    View="GroupBox" Orientation="Vertical"
                IsCollapsible="True" IsCollapsed="True">

            <dxlc:LayoutItem>
                <Button Content="Current.Application" 
                    Click="btnHttpContextWalker_Click" Tag="Application"/>
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button Content="Current.Session" 
                    Click="btnHttpContextWalker_Click" Tag="Session"/>
            </dxlc:LayoutItem>

            <dxlc:LayoutItem>
                <Button Content="Current.Cache" 
                    Click="btnHttpContextWalker_Click" Tag="Cache"/>
            </dxlc:LayoutItem>

        </dxlc:LayoutGroup>

        <dxlc:LayoutGroup Header="Find VariableDeclarationSyntax" 
        	View="GroupBox" Orientation="Vertical"
            IsCollapsible="True" IsCollapsed="True">

            <dxlc:LayoutGroup
            	Orientation="Horizontal">

                <dxlc:LayoutGroup
                	Orientation="Vertical">
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit x:Name="ceVariablesUseRegEx" Content="Use Regular Expressions"
                                       IsChecked="False"/>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem Label="Variables">
                        <dxe:TextEdit x:Name="teVariableRegEx" Text=".*"
                                      IsEnabled="{cb:Binding ElementName=ceVariablesUseRegEx, Path=IsChecked, Mode=OneWay}"
                                      ToolTip="Supports Regular Expressions"/>
                    </dxlc:LayoutItem>

                    <!--<dxlc:LayoutItem>
                        <dxe:CheckEdit x:Name="ceShowFields" 
                                   Content="ShowFields" 
                                   IsChecked="True"/>
                    </dxlc:LayoutItem>-->

                    <!--<dxlc:LayoutItem>
                        
                        <dxe:CheckEdit x:Name="ceAllTypes_Variables" 
                               Content="All Types" 
                               IsChecked="True" />
                    </dxlc:LayoutItem>-->
                    
                    <!--<dxlc:LayoutGroup
                    	Orientation="Vertical"
