<uiuc:wucDXBase
    x:Class="VNCCodeCommandConsole.User_Interface.User_Controls.wucLiveLogViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 

    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"      
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"  
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"

    xmlns:local="clr-namespace:VNCCodeCommandConsole.User_Interface"
    xmlns:localData="clr-namespace:VNCCodeCommandConsole.Data"
    xmlns:ui="clr-namespace:VNCCodeCommandConsole.User_Interface"    
    xmlns:uiuc="clr-namespace:VNCCodeCommandConsole.User_Interface.User_Controls"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"       
    xmlns:sys="clr-namespace:System;assembly=mscorlib"   
    
    xmlns:cb="clr-namespace:CalcBinding;assembly=CalcBinding"
    
    mc:Ignorable="d"
    Title="Server-Instance Explorer" FontSize="16"
    d:DesignWidth="1000" d:DesignHeight="800" 
    Loaded="OnLoaded"  >
    
    <uiuc:wucDXBase.Resources>
        
        <localData:ApplicationDataSet x:Key="applicationDataSet" />

    </uiuc:wucDXBase.Resources>

    <dxlc:LayoutControl Name="lc_Root" 
                      Orientation="Vertical"
                      Background="Transparent"
                      VerticalAlignment="Stretch"
                      DataContext="">
        
        <dxlc:LayoutControl.AvailableItems>
            
            <!-- Add things that are optionally displayable-->

            <dxdo:LayoutPanel x:Name="lp_OptStuff1" Caption="Optional Stuff1" >
                <StackPanel>
                    <Label Content="lp_OptStuff1 Goes Here" />
                    <!--<ContentControl Template="{StaticResource AdminWindowToolBoxControlsTemplate}" />-->
                </StackPanel>
            </dxdo:LayoutPanel>

            <dxdo:LayoutPanel x:Name="lp_OptStuff2" Caption="Optional Stuff2" >
                <StackPanel>
                    <Label Content="lp_OptStuff2 Goes Here" />
                    <!--<ContentControl Template="{StaticResource AdminWindowToolBoxControlsTemplate}" />-->
                </StackPanel>
            </dxdo:LayoutPanel>

        </dxlc:LayoutControl.AvailableItems>

        <dxlc:LayoutGroup Name="lg_Header"
                        VerticalAlignment="Top">
            <Label Content="lg_Header Stuff Goes Here" />
        </dxlc:LayoutGroup>
        
        <dxlc:LayoutGroup Name="lg_Body" >

            <!-- Use this if you want a LayoutManager -->
            
            <dxdo:DockLayoutManager 
                Name="lg_Body_dlm" dx:StyleManager.ApplyApplicationTheme="True" FontSize="12" >

                <dxdo:LayoutGroup Name="lg_Body_dlm_lg">

                    <dxdo:LayoutPanel Name="lg_Body_dlm_lg_lpRoot" 
                                      AllowFloat="False" AllowClose="False" AllowDock="False" AllowHide="False" >

                        <dxlc:LayoutControl 
                            Grid.Row="1" Grid.Column="0"
                            Orientation="Vertical" StretchContentVertically="True" Background="Transparent">

                            <dxlc:LayoutGroup Name="groupContainer" 
                                              Orientation="Vertical" View="Tabs">

                                <dxlc:LayoutGroup.GroupBoxStyle>
                                    <Style TargetType="dxlc:GroupBox">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="TitleVisibility" Value="Collapsed" />
                                    </Style>
                                </dxlc:LayoutGroup.GroupBoxStyle>

                                <!-- Individual LayoutGroups go here (if you want tabs or groups)-->

                                <dxlc:LayoutGroup Header="LiveLogView" Name="lg_X" >

                                    <dxlc:LayoutGroup
                                    	Orientation="Vertical">

                                        <dxlc:LayoutItem Label="ServerURI: ">
                                            <TextBox x:Name="ServerURI" 
                                                     Text="http://localhost:8095/signalr"
                                                     Height="20" TextWrapping="Wrap" Margin="0,0,80,0"/>
                                        </dxlc:LayoutItem>

                                        <dxlc:LayoutGroup VerticalAlignment="Top">
                                            <StackPanel x:Name="SignInPanel" Margin="10,0" >
                                                <Label Content="Enter user name:"/>
                                                <Grid>
                                                    <TextBox x:Name="UserNameTextBox" Height="20" Margin="0,0,80,0"/>
                                                    <Button x:Name="SignInButton" Content="Sign In" Width="75" Click="btnSignIn_Click" HorizontalAlignment="Right"/>
                                                </Grid>

                                                <Label x:Name="StatusText" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,10"/>
                                            </StackPanel>

                                            <dxlc:LayoutGroup x:Name="ChatPanel"
                                            	Orientation="Vertical"
                                                Visibility="Hidden">

                                                <dxlc:LayoutGroup
                                                	Orientation="Horizontal">

                                                    <dxlc:LayoutItem
                                                	    Label="Message"
                                                	    LabelPosition="Top"
                                                        HorizontalAlignment="Left">
                                                        <TextBox x:Name="tbMessage"
                                                                 Width="300"
                                                                 TextWrapping="Wrap" />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem
                                                	    Label="Priority"
                                                	    LabelPosition="Top"
                                                        HorizontalAlignment="Left">
                                                        <TextBox x:Name="tbMessagePriority" Width="100" />
                                                    </dxlc:LayoutItem>

                                                </dxlc:LayoutGroup>

                                                <dxlc:LayoutGroup
                                                	Orientation="Horizontal">

                                                    <Button x:Name="btnSend" Content="Send" Width="75" Height="20" 
                                                            Click="btnSend_Click" 
                                                            IsDefault="True" IsEnabled="False" />
                                                    <Button x:Name="btnSendPriority" Content="Send Priority" HorizontalAlignment="Left" Height="20" 
                                                            Click="btnSendPriority_Click" IsEnabled="False" />

                                                </dxlc:LayoutGroup>

                                            </dxlc:LayoutGroup>

                                        </dxlc:LayoutGroup>

                                        <dxe:TextEdit x:Name="teLogStream" 
                                                  FontFamily="Consolas" 
                                                  FontSize="{Binding ElementName=sbFontSize, Path=Value}"
                                                  VerticalAlignment="Stretch"
                                                  VerticalContentAlignment="Stretch"                                                     
                                                  VerticalScrollBarVisibility="Auto"
                                                  TextWrapping="Wrap"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  EditValueChanged="teLogStream_EditValueChanged"/>
                                     
                                        <dxlc:LayoutGroup Header="Capture Filter" 
                                            View="GroupBox" Orientation="Horizontal"
                                                            VerticalAlignment="Bottom"
                                            Visibility="Visible" IsCollapsible="True">
                                            
                                            <dxlc:LayoutGroup
                                            	Orientation="Vertical">
                                                <Button x:Name="btnToggle" Content="All Off" Click="btnToggle_Click"   HorizontalAlignment="Left"/>

                                            </dxlc:LayoutGroup>
                                                
                                            <dxlc:LayoutGroup
                                            	Orientation="Vertical">

                                                <dxlc:LayoutGroup
                                                    Orientation="Horizontal" HorizontalAlignment="Left">

                                                    <Button x:Name="btnInfoToggle" Content="All Off" Click="btnInfoToggle_Click"   HorizontalAlignment="Left"/>

                                                    <dxe:CheckEdit x:Name="ceInfo00" Content="Info 00" IsChecked="True"/>
                                                    <dxe:CheckEdit x:Name="ceInfo01" Content="Info 01" IsChecked="True"/>
                                                    <dxe:CheckEdit x:Name="ceInfo02" Content="Info 02" IsChecked="True"/>
                                                    <dxe:CheckEdit x:Name="ceInfo03" Content="Info 03" IsChecked="True"/>
                                                    <dxe:CheckEdit x:Name="ceInfo04" Content="Info 04" IsChecked="True"/>
                                                    <dxe:CheckEdit x:Name="ceInfo05" Content="Info 05" IsChecked="True"/>
                                                </dxlc:LayoutGroup>

                                                <dxlc:LayoutGroup
                                                Orientation="Horizontal" HorizontalAlignment="Left">
                                                
                                                <Button x:Name="btnDebugToggle" Content="All Off" Click="btnDebugToggle_Click"   HorizontalAlignment="Left"/>
                                                
                                                <dxe:CheckEdit x:Name="ceDebug00" Content="Debug 00" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceDebug01" Content="Debug 01" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceDebug02" Content="Debug 02" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceDebug03" Content="Debug 03" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceDebug04" Content="Debug 04" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceDebug05" Content="Debug 05" IsChecked="True"/>
                                            </dxlc:LayoutGroup>
                                          
                                            <dxlc:LayoutGroup
                                                Orientation="Horizontal">
                                                
                                                <Button x:Name="btnTrace00_09Toggle" Content="All Off" Click="btnTrace00_09Toggle_Click"   HorizontalAlignment="Left"/>
                                                
                                                <dxe:CheckEdit x:Name="ceTrace00" Content="Trace 00" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace01" Content="Trace 01" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace02" Content="Trace 02" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace03" Content="Trace 03" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace04" Content="Trace 04" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace05" Content="Trace 05" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace06" Content="Trace 06" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace07" Content="Trace 07" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace08" Content="Trace 08" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace09" Content="Trace 09" IsChecked="True"/>
                                                    
                                            </dxlc:LayoutGroup>

                                            <dxlc:LayoutGroup
                                                Orientation="Horizontal">
                                                
                                                <Button x:Name="btnTrace10_19Toggle" Content="All Off" Click="btnTrace10_19Toggle_Click"   HorizontalAlignment="Left"/>
                                                
                                                <dxe:CheckEdit x:Name="ceTrace10" Content="Trace 10" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace11" Content="Trace 11" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace12" Content="Trace 12" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace13" Content="Trace 13" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace14" Content="Trace 14" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace15" Content="Trace 15" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace16" Content="Trace 16" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace17" Content="Trace 17" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace18" Content="Trace 18" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace19" Content="Trace 19" IsChecked="True"/>

                                            </dxlc:LayoutGroup>

                                            <dxlc:LayoutGroup
                                                Orientation="Horizontal">
                                                
                                                <Button x:Name="btnTrace20_29Toggle" Content="All Off" Click="btnTrace20_29Toggle_Click" HorizontalAlignment="Left"/>
                                                
                                                <dxe:CheckEdit x:Name="ceTrace20" Content="Trace 20" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace21" Content="Trace 21" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace22" Content="Trace 22" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace23" Content="Trace 23" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace24" Content="Trace 24" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace25" Content="Trace 25" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace26" Content="Trace 26" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace27" Content="Trace 27" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace28" Content="Trace 28" IsChecked="True"/>
                                                <dxe:CheckEdit x:Name="ceTrace29" Content="Trace 29" IsChecked="True"/>

                                            </dxlc:LayoutGroup>

                                            </dxlc:LayoutGroup>
                                        </dxlc:LayoutGroup>

                                        <dxlc:LayoutGroup
                                        	Orientation="Vertical"
                                            VerticalAlignment="Bottom">

                                            <dxlc:LayoutGroup
                                             	Orientation="Horizontal">

                                                <dxlc:LayoutItem HorizontalAlignment="Left">
                                                	<dxe:CheckEdit x:Name="ceAutoUpdate" Content="Auto Update" IsChecked="False"/>
                                                </dxlc:LayoutItem>
                                                
                                                <dxlc:LayoutItem>
                                                    <Button x:Name="btnUpdateScreen" 
                                                            ToolTip="Update Screen"
                                                            HorizontalAlignment="Left"
                                                            IsEnabled="{cb:Binding ElementName=ceAutoUpdate, Path=!IsChecked, Mode=OneWay}"
                                                            Click="btnUpdateScreen_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Label x:Name="lbLastEntry" Content="HH:MM:SS.xxx" Width="80" />
                                                            <Label Content="Update Screen" HorizontalAlignment="Right" Foreground="Red" />
                                                        </StackPanel>
                                                    </Button>
                                                </dxlc:LayoutItem>
                                                
                                                <dxlc:LayoutItem HorizontalAlignment="Right">
                                                    <Button x:Name="btnClear" Content="Clear Screen" 
                                                            Foreground="Red"
                                                            ToolTip="Clear Screen"
                                                            Click="btnClear_Click" />
                                                </dxlc:LayoutItem>

                                                <dxlc:LayoutItem HorizontalAlignment="Right">
                                                    <Button x:Name="btnCopy" Content="Copy Contents" 
                                                            ToolTip="Copy contents to clipboard"
                                                            Click="btnCopy_Click" />
                                                </dxlc:LayoutItem>

                                                <dxlc:LayoutItem Label="FontSize" 
                                                     LabelPosition="Left"
                                                     HorizontalAlignment="Right">

                                                    <dxe:SpinEdit x:Name="sbFontSize" 
                                                        MinValue="8" Value="10" HorizontalAlignment="Right" />

                                                </dxlc:LayoutItem>

                                            </dxlc:LayoutGroup>

                                        </dxlc:LayoutGroup>
                                        
                                    </dxlc:LayoutGroup>

                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="Y Stuff" Name="lg_Y">

                                    <dxlc:LayoutItem Name="li_Y" MaxHeight="1200" VerticalAlignment="Top" >

                                    </dxlc:LayoutItem>

                                </dxlc:LayoutGroup>
                                
                            </dxlc:LayoutGroup>

                        </dxlc:LayoutControl>

                    </dxdo:LayoutPanel>

                </dxdo:LayoutGroup>

                <dxdo:DockLayoutManager.AutoHideGroups>

                    <dxdo:AutoHideGroup DockType="Left">

                        <dxdo:LayoutPanel x:Name="lp_LeftStuff" Caption="Left Stuff" ItemWidth="150" >

                            <StackPanel>
                                <Label Content="lp_LeftStuff Goes Here" />
                                <!--<ContentControl Template="{StaticResource AdminWindowToolBoxControlsTemplate}" />-->
                            </StackPanel>

                        </dxdo:LayoutPanel>

                    </dxdo:AutoHideGroup>

                    <dxdo:AutoHideGroup DockType="Right">

                        <dxdo:LayoutPanel x:Name="lp_RightStuff" Caption="RIght Stuff" >
                            <StackPanel>
                                <Label Content="lp_RightStuff Goes Here" />
                                <!--<ContentControl Template="{StaticResource AdminWindowToolBoxControlsTemplate}" />-->
                            </StackPanel>
                        </dxdo:LayoutPanel>

                    </dxdo:AutoHideGroup>

                </dxdo:DockLayoutManager.AutoHideGroups>

            </dxdo:DockLayoutManager>
            
            <!--  Use this if you have simple Content -->

        </dxlc:LayoutGroup>
        
        <dxlc:LayoutGroup Name="lg_Footer"
                        VerticalAlignment="Top">
            <Label Content="lg_Footer Stuff Goes Here" />
        </dxlc:LayoutGroup>
        
    </dxlc:LayoutControl>
    
</uiuc:wucDXBase>
